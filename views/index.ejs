  <!-- Recording Modal -->
  <div id="recordingModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
    <div class="modal-content">
      <h3 class="text-lg font-semibold mb-5">Recording</h3>
      <div class="h-24 bg-neutral-lighter rounded-lg mb-4 flex items-center justify-center">
        <div id="waveform" class="w-4/5 h-14" style="background-image: linear-gradient(90deg, #5d6cfa 1px, transparent 1px), linear-gradient(90deg, rgba(93, 108, 250, 0.5) 1px, transparent 1px); background-size: 10px 100%, 5px 100%;"></div>
      </div>
      <div class="text-center text-3xl font-bold mb-4 recording-time">00:00</div>
      <div class="flex justify-center">
        <button id="stopRecording" class="btn btn-danger mx-2 py-2 px-5 rounded-full">Stop</button>
        <button id="pauseRecording" class="btn btn-secondary mx-2 py-2 px-5 rounded-full">Pause</button>
      </div>
    </div>
  </div>

  <!-- Upload Modal -->
  <div id="uploadModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
    <div class="modal-content">
      <h3 class="text-lg font-semibold mb-5">Import Audio</h3>
      <form id="uploadForm" class="mt-4">
        <input type="file" id="audioFile" accept="audio/*" class="w-full mb-5" />
        <button type="submit" class="btn btn-primary w-full py-2.5">Upload</button>
      </form>
    </div>
  </div>

  <!-- Grammar Annotation Modal -->
  <div id="annotationModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
    <div class="modal-content w-[500px] max-w-full">
      <div class="flex justify-between items-center mb-5">
        <h3 class="text-lg font-semibold">Grammar Annotation</h3>
        <button id="closeAnnotationModal" class="text-neutral-dark hover:text-black">
          <i class="material-icons">close</i>
        </button>
      </div>
      
      <div class="mb-4">
        <label class="block text-sm font-medium mb-2">Original Text</label>
        <div class="p-3 bg-neutral-lightest rounded border border-neutral-light text-sm">
          <span class="highlight highlight-grammar">dog's</span> the <span class="highlight highlight-grammar">dog</span> sandcastle
        </div>
      </div>
      
      <div class="mb-5">
        <label for="correctedText" class="block text-sm font-medium mb-2">Correction</label>
        <textarea id="correctedText" rows="3" class="w-full p-3 border border-neutral-light rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary" placeholder="Enter corrected text...">dog's sandcastle</textarea>
      </div>
      
      <div class="mb-5">
        <label for="annotationType" class="block text-sm font-medium mb-2">Type</label>
        <select id="annotationType" class="w-full p-3 border border-neutral-light rounded text-sm focus:outline-none focus:ring-2 focus:ring-primary/20 focus:border-primary">
          <option value="grammar">Grammar Error</option>
          <option value="mispronunciation">Mispronunciation</option>
          <option value="repetition">Repetition</option>
          <option value="filler">Filler Word</option>
        </select>
      </div>
      
      <div class="flex justify-end gap-3">
        <button id="cancelAnnotation" class="btn btn-secondary py-2 px-4">Cancel</button>
        <button id="saveAnnotation" class="btn btn-primary py-2 px-4">Save</button>
      </div>
    </div>
  </div>

  <!-- Annotation Detail Popup -->
  <div id="annotationDetailPopup" class="fixed hidden p-3 bg-white rounded-lg shadow-lg z-50" style="min-width: 200px;">
    <div class="flex justify-between items-center mb-2">
      <h4 class="text-sm font-medium" id="annotationDetailType">Pause</h4>
      <button id="closeAnnotationDetail" class="text-neutral-dark hover:text-black text-xs">
        <i class="material-icons" style="font-size: 16px;">close</i>
      </button>
    </div>
    <div class="text-xs space-y-1">
      <div class="flex justify-between">
        <span class="text-neutral-darker">Start:</span>
        <span id="annotationDetailStart" class="font-medium">00:05.2</span>
      </div>
      <div class="flex justify-between">
        <span class="text-neutral-darker">End:</span>
        <span id="annotationDetailEnd" class="font-medium">00:07.2</span>
      </div>
      <div class="flex justify-between">
        <span class="text-neutral-darker">Duration:</span>
        <span id="annotationDetailDuration" class="font-medium">2.0s</span>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/main.js"></script>
</body>
</html> 